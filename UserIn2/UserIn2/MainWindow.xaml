<Window x:Class="UserIn2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserIn2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="184*"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="richTextBox1" Margin="0,66,0,0" Grid.RowSpan="2" TextChanged="richTextBox1_TextChanged"/>
        <ToolBar HorizontalAlignment="Center" Height="66" VerticalAlignment="Center" Width="800">
            <Button Click="Button_Click" Width="84">Bold</Button>
            <Button Click="Button_Click_1" Width="71">Italic</Button>
            <Slider Name="Slider1" Minimum="2" Maximum="72" Width="117" ValueChanged="Slider1_ValueChanged" Height="21"></Slider>
            <ComboBox Name="comboBox1" Width="149" SelectionChanged="comboBox1_SelectionChanged"></ComboBox>
        </ToolBar>
    </Grid>
</Window>